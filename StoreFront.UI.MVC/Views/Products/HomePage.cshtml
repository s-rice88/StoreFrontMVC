@model IEnumerable<StoreFront.DATA.EF.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

@{
    //Specific Object Selector
    foreach (var item in Model)
    {

        if (item.ProductId == 2)
        {
            ViewBag.DealDes = item.Description;
            ViewBag.DealName = item.ProductName;
            ViewBag.DealImage = item.ProductImage;
            ViewBag.DealId = item.ProductId;
            ViewBag.DealPrice = Html.DisplayFor(modelItem => item.Price);
        }

    }
}


<!-- hero area -->
<div class="hero-area hero-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 offset-lg-2 text-center">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <p class="subtitle">Online & In-Person Degrees</p>
                        <h1>Dev Financial</h1>
                        <div class="hero-btns">
                            <a href="@Url.Action("Index","Products")" class="boxed-btn">Shop Now</a>
                            <a href="@Url.Action("Contact","Home")" class="bordered-btn">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end hero area -->
<!-- features list section -->
<div class="list-section pt-80 pb-80">
    <div class="container">

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="list-box d-flex align-items-center">
                    <div class="list-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <div class="content">
                        <h3>Free Shipping</h3>
                        <p>When order over $75</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="list-box d-flex align-items-center">
                    <div class="list-icon">
                        <i class="fas fa-phone-volume"></i>
                    </div>
                    <div class="content">
                        <h3>24/7 Support</h3>
                        <p>Get support all day</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="list-box d-flex justify-content-start align-items-center">
                    <div class="list-icon">
                        <i class="fas fa-sync"></i>
                    </div>
                    <div class="content">
                        <h3>Refund</h3>
                        <p>Get refund within 3 days!</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- end features list section -->
<!-- product section -->

<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Our</span> Products</h3>
                </div>
            </div>
        </div>


        <div class="row">
            @foreach (var item in Model)
            {
                if (item.ProductId == 1 || item.ProductId == 2 || item.ProductId == 3)
                {

                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a asp-action="Details" asp-route-id="@item.ProductId"><img src="~/Images/@item.ProductImage" alt="@item.Description"></a>
                            </div>
                            <h3>@item.ProductName</h3>
                            <p class="product-price"> @Html.DisplayFor(modelItem => item.Price) </p>
                            <a asp-action="AddToCart" class="cart-btn" asp-controller="ShoppingCart" asp-route-id="@item.ProductId"> <i class="fas fa-shopping-cart"></i> Add to Cart</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- end product section -->
<!-- cart banner section -->
<section class="cart-banner pt-100 pb-100">
    <div class="container">
        <div class="row clearfix">
            <!--Image Column-->
            <div class="image-column col-lg-6">
                <div class="image">
                    <div class="price-box">
                        <div class="inner-price">
                            <span class="price">
                                <strong>30%</strong> <br> off
                            </span>
                        </div>
                    </div>
                    <img src="~/Images/@ViewBag.DealImage" alt="@ViewBag.DealDes">
                </div>
            </div>

            <!--Content Column-->
            <div class="content-column col-lg-6">
                <div class="text-center">
                    <h3><span class="orange-text">Deal</span> of the month</h3>
                    <h3 class=""><s>$25,998.00</s><span class="orange-text"></span></h3>
                    <h3><span class="orange-text">NOW @ViewBag.DealPrice</span></h3>
                    <h4>@ViewBag.DealName</h4>
                    <div class="text">@ViewBag.DealDes</div>
                    <!--Countdown Timer-->
                    <div class="time-counter"><div class="time-countdown clearfix" data-countdown="@DateTime.Now.AddDays(1)"><div class="counter-column"><div class="inner"><span class="count">00</span>Days</div></div> <div class="counter-column"><div class="inner"><span class="count">00</span>Hours</div></div>  <div class="counter-column"><div class="inner"><span class="count">00</span>Mins</div></div>  <div class="counter-column"><div class="inner"><span class="count">00</span>Secs</div></div></div></div>
                    <a asp-action="AddToCart" class="cart-btn" asp-controller="ShoppingCart" asp-route-id="@ViewBag.DealId"> <i class="fas fa-shopping-cart"></i> Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end cart banner section -->
<!-- advertisement section -->
<div class="abt-section mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="abt-bg">
                    <a href="https://www.youtube.com/embed/ATDYLTnGJV0" class="video-play-btn popup-youtube"><i class="fas fa-play"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="abt-text">
                    <p class="top-sub">Since Year 1999</p>
                    <h2>We are <span class="orange-text">Dev Financial</span></h2>
                    <p>Our mission is to create structures that deepen and advance our understanding of financial management and report on research that helps clients improve performance and drive business strategy in the future.</p>
                    <p>
                        Utilizing a cloud platform that seamlessly blends existing applications into a cohesive, web-based platform.
                        This includes strategic acquisitions and the integration of leading specialists.
                    </p>
                    <a href="@Url.Action("About","Home")" class="boxed-btn mt-4">know more</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end advertisement section -->
<!-- shop banner -->
<section class="shop-banner">
    <div class="container">
        <h3>December sale is on! <br> with big <span class="orange-text">Discount...</span></h3>
        <div class="sale-percent"><span>Sale! <br> Upto</span>50% <span>off</span></div>
        <a href="@Url.Action("Index","Products")" class="cart-btn btn-lg">Shop Now</a>
    </div>
</section>
<!-- end shop banner -->
